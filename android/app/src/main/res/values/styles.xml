<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Theme for Android 12+ -->
    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Fullscreen white background -->
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>

        <!-- Splash logo (PNG in drawable folders) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>

        <!-- No icon overlay -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- After splash â†’ go to normal app theme -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Splash screen for Android 11 and below -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
